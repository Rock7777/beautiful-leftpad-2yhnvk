#ProgressBar code
import React from 'react';
import { useState , useEffect } from 'react'


function App() {
  const MAX_ACTIVE = 5;
  const [activeBars,setActiveBars] = useState([])
  const [queue,setQueue] = useState([])
  // #eee --> gray
  // #4caf50 --> dark moderate lime green
  const addProgressBar = () =>
  {
    if(activeBars.length < MAX_ACTIVE) {
      startNewBar();
    }
    else {
      // add a placeholder job to queue
      setQueue((prev)=> [...prev, { id:Date.now() }]);
    }
  }
  const startNewBar = () => {
    const id = Date.now();
    setActiveBars((prev)=> [...prev,{id,progress: 1}]);
  }
  // handle progress bar animation
  
  useEffect(()=>
  {
    const timers = activeBars.map((bar,index)=>
    {
      if(bar.progress > 100) return null;
      return setInterval(()=>
      {
       setActiveBars(prev => {
         const updated = [...prev];
         updated[index].progress += 1;
         return updated;
       }) 
      },30)
    });
    
    return () => timers.forEach((t)=> t && clearInterval(t))
  },[activeBars])
  
  // Remove finished bars
  
  useEffect(()=>
  {
   const finishedBars = activeBars.filter(b => b.progress >= 100);
   if(finishedBars.length > 0) {
     // remove item
     
     setActiveBars((prev)=> prev.filter(b=> b.progress < 100));
     // if  queue has pending bars start the next one 
      if(queue.length > 0) {
        setQueue((prev)=>{
          const next = [...prev];
          next.shift();
          return next;
        })
        startNewBar();
      }
   }
  },[activeBars,queue])
  const styles = {
    progress: {
      width: "100%",
      height: 22,
      background: "#eee",
      borderRadius: 4,
      margin:"8px 0",
      overflow: "hidden",
    },
    fill: {
      height: "100%",
      background: "#4caf50",
      transition: "width 0.1s linear",
    },
  }
  

  return (
    <div style={{padding: 20}}>
      <button onClick={addProgressBar}>Add Progress</button>
      <div style={{marginTop: 20, width: 300}}>
        {activeBars.map((bar)=>
        {
          return(
            <div key={bar.id} style={styles.progress}>
              <div style={{...styles.fill,
                width: `${bar.progress}%`,
              }}
              />
            </div>
          )
        })}
      </div>
    </div>
  )
}

export default App

