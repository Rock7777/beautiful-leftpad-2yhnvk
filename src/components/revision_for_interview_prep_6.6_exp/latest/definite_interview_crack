# accordion

Accordion code - 

import React from 'react';
import { useState } from 'react'

function App() {
  const accordionData = [{
    userId:1,
    header: 'Accordion 1',
    description: 'Text from Accordion 1'
  },
  {
    userId:2,
    header: 'Accordion 2',
    description: 'Text from Accordion 2'
  },
  {
    userId:3,
    header: 'Accordion 3',
    description: 'Text from Accordion 3'
  }]
  const [activeIndex,setActiveIndex] = useState(null)
  const styles = {
    accordion-container: {},
    accordion: {},
    accordion-header: {},
    accordion-body: {},
    
  };
  
  const handleClick = (index) =>
  {
    setActiveIndex(activeIndex === index ? null : index)
  }
  
  return (
    <div className="accordion-container">
      <h1>Hello, World!</h1>
        {accordionData.map((accordion,index)=>
        {
        return(
        <div className="accordion">
          <div key={accordion.userId} 
            className = ""accordion-header 
            onClick={()=>handleClick(index)}>
            {accordion.header}
          </div>
          {activeIndex === index && (
          <div className = "accordion-body">
            {accordion.description}
          </div>)}
        </div>)
        })}
      </div>
  )
}

export default App










